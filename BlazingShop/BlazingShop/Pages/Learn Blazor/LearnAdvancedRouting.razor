@page "/learnadvancerouting"
@inject NavigationManager NavManager

<h3>LearnAdvancedRouting</h3>
<p>
    First Parameter : @Parameter1
</p>

<p>
    Second Parameter : @Parameter2
</p>
<p>
    <button @onclick="LoadParameters">Load Parameters</button>
</p>
<p>

</p>

@code {
    string Parameter1;
    string Parameter2;
    private void LoadParameters()
    {
        var absoluteUri = new Uri(NavManager.Uri);
        var queryParam = System.Web.HttpUtility.ParseQueryString(absoluteUri.Query);
        Parameter1 = queryParam["Parameter1"];
        Parameter2 = queryParam["Parameter2"];
    }
}
